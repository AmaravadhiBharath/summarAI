rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // USER DATA - Users can only access their own data
    // ============================================
    match /users/{userId} {
      // Allow authenticated users to read and write their own profile
      // Match userId with auth.uid for security
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // User history subcollection
      match /history/{historyId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // ============================================
    // ADMIN COLLECTION - Read-only for all authenticated users
    // ============================================
    match /admin/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only allow writes through Firebase Console or Admin SDK
    }
    
    // ============================================
    // DEFAULT - Deny all other access
    // ============================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
