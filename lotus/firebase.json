{
    "hosting": {
        "public": "dist-web",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/mobile",
                "destination": "/mobile.html"
            },
            {
                "source": "/mobile/**",
                "destination": "/mobile.html"
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}